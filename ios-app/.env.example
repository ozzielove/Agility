# ==========================================
# Agility Financial App - Environment Variables
# ==========================================
# COPY THIS FILE TO .env AND FILL IN YOUR ACTUAL VALUES
# NEVER COMMIT .env TO VERSION CONTROL
# ==========================================

# ===== TestSprite MCP Configuration =====
TESTSPRITE_API_KEY=your_testsprite_api_key_here

# ===== AI API Keys =====
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# ===== Financial Services =====
STRIPE_SECRET_KEY=your_stripe_secret_key_here
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox

# ===== Communication Services =====
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ===== Project Management =====
NOTION_API_KEY=your_notion_api_key_here
LINEAR_API_KEY=your_linear_api_key_here

# ===== Design Tools =====
FIGMA_API_TOKEN=your_figma_api_token_here

# ===== Development Tools =====
N8N_API_KEY=your_n8n_api_key_here
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# ===== Database & Backend =====
DATABASE_URL=postgresql://user:password@localhost:5432/agility
REDIS_URL=redis://localhost:6379
JWT_SECRET=your_secure_random_jwt_secret_here

# ===== Cloud Services =====
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# ===== Monitoring & Analytics =====
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# ===== App Configuration =====
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# ===== Security =====
ENCRYPTION_KEY=your_32_character_encryption_key
SESSION_SECRET=your_session_secret_here

# ===== Feature Flags =====
ENABLE_BIOMETRIC_AUTH=true
ENABLE_MFA=true
ENABLE_MILEAGE_TRACKING=false
ENABLE_TAX_ESTIMATES=true
